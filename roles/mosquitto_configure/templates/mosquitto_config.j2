allow_anonymous false
password_file /etc/mosquitto/passwd
log_dest file /var/log/mosquitto/mosquitto.log

listener {{ non_ssl_port }} 127.0.0.1

listener {{ ssl_port }} 0.0.0.0
cafile /etc/mosquitto/newcerts/ca.crt
certfile /etc/mosquitto/newcerts/mosquittodemo.sensorberg.com.crt
keyfile /etc/mosquitto/newcerts/mosquittodemo.sensorberg.com.key
require_certificate true